---
import Badge from "../components/Badge.astro";
const linkedinUrl = "https://www.linkedin.com/in/aterancode/";
const whatsappNumber = "584241456041";
const whatsappMessage =
  "Hola Adrian, vi tu portafolio y me gustar√≠a contactarte.";
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<main class="pt-28 md:py-28">
  <section>
    <div class="flex flex-col max-w-4xl">
      <div class="flex flex-col gap-2">
        <img
          src="/img/hero.png"
          width="100"
          class="rounded-full animate-bounce"
          alt="Foto de Adrian Teran"
        />
        <h1 class="text-5xl font-semibold text-gray-200">
          Hey, mi nombre es Adrian Teran
        </h1>
      </div>
      <p class="text-md text-gray-200 opacity-70 py-4">
        Desarrollador Web - Especializado en crear soluciones digitales!
      </p>

      <div class="flex flex-wrap gap-4 mt-2 mb-6">
        <a
          href={linkedinUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-[#0077b5] rounded-lg hover:bg-[#005a8a] hover:-translate-y-2 transition-all duration-500"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
            ><path
              d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
            ></path></svg
          >
          LinkedIn
        </a>

        <a
          href={whatsappLink}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-[#25d366] rounded-lg hover:bg-[#128c7e] hover:-translate-y-2 transition-all duration-500"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
            ><path
              d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181 0 6.167 1.24 8.413 3.488 2.246 2.248 3.484 5.232 3.484 8.402 0 6.556-5.338 11.892-11.893 11.892-1.992-.001-3.951-.499-5.688-1.447l-6.309 1.659zm6.222-4.034l.346.206c1.546.916 3.412 1.4 5.326 1.4 5.561 0 10.081-4.521 10.081-10.082 0-2.693-1.047-5.226-2.951-7.129s-4.438-2.952-7.13-2.952c-5.559 0-10.079 4.522-10.079 10.081 0 2.093.641 4.129 1.854 5.892l.226.33-1.082 3.945 4.039-1.06z"
            ></path></svg
          >
          WhatsApp
        </a>
      </div>
    </div>
    <Badge>Disponible para trabajar</Badge>
  </section>
</main>
